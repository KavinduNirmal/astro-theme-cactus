---
import type { CollectionEntry } from "astro:content";
import type { HTMLTag, Polymorphic } from "astro/types";
import FormattedDate from "../FormattedDate.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<"post">;
	withDesc?: boolean;
};

const { post, as: Tag = "div", withDesc = false } = Astro.props;
const postDate = post.data.updatedDate ?? post.data.publishDate;
---

<Tag>
	<a href={`/posts/${post.slug}/`} class="cactus-link text-base" rel="prefetch">
		{post.data.title}
	</a>
</Tag>
{withDesc && <p class="line-clamp-3 block ">{post.data.description}</p>}
<FormattedDate date={postDate} class="min-w-[120px] text-gray-500" />
